<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".CostumizeAvatarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:id="@+id/borderView"
            android:layout_width="257dp"
            android:layout_height="171dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.231"
             />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.385" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="41dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintStart_toEndOf="@+id/costumizeCoins"
            app:layout_constraintTop_toBottomOf="@+id/moldura"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/costumizeCoins"
            android:layout_width="36dp"
            android:layout_height="39dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moldura"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wood"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="changeBorder"
                android:clickable="false"
                android:src="@drawable/wood_border" />

            <ImageView
                android:id="@+id/silver"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:onClick="changeBorder"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/silver_border" />

            <ImageView
                android:id="@+id/gold"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="changeBorder"
                android:src="@drawable/gold_border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/character0"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="changeAvatar"
                android:src="@drawable/avatar_tree" />

            <ImageView
                android:id="@+id/character1"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:onClick="changeAvatar"
                android:layout_weight="1"
                android:src="@drawable/bluezao" />

            <ImageView
                android:id="@+id/character2"
                android:layout_width="114dp"
                android:onClick="changeAvatar"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/yellowzao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/character3"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:onClick="changeAvatar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/greenzao"/>

            <ImageView
                android:id="@+id/character4"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="changeAvatar"
                android:src="@drawable/redzao" />

            <ImageView
                android:id="@+id/character5"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:onClick="changeAvatar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/recyclesign1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>