<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
        <padding
            android:right="2dp"
            android:bottom="2dp"/>

        <corners
            android:bottomRightRadius="8dp"
            android:topLeftRadius="8dp" />

            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="#999999" />
            <solid android:color="#999999" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:bottom="1dp"
        android:right="1dp">
        <shape>
            <padding
                android:right="2dp"
                android:bottom="2dp"/>

            <corners
                android:bottomRightRadius="8dp"
                android:topLeftRadius="8dp" />

            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="#999999" />
            <solid android:color="#999999" />
            <!-- Set the background color of your layout here -->
            <stroke android:width="2dp" android:color="#79d279" />
            <solid android:color="#79d279" />
        </shape>
    </item>



</layer-list>
